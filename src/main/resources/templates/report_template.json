{
  "type": "bubble",
  "hero": {
    "type": "image",
    "url": "https://i.imgur.com/Z5GS685.jpeg",
    "size": "full",
    "aspectRatio": "20:13",
    "aspectMode": "cover",
    "action": {
      "type": "uri",
      "uri": "https://i.imgur.com/Z5GS685.jpeg",
      "label": "View image at Imgur"
    }
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "spacing": "md",
    "contents": [
      {
        "type": "text",
        "text": "Rabbit's House Report",
        "size": "xl",
        "weight": "bold",
        "color": "#1DB446",
        "align": "start"
      },
      {
        "type": "text",
        "align": "end",
        "color": "#777777",
        "size": "sm",
        "text": "{{CurrentTime}}"
      },
      {
        "type": "separator"
      },
      {
        "type": "box",
        "layout": "baseline",
        "contents": [
          {
            "type": "icon",
            "url": "https://icooon-mono.com/i/icon_12767/icon_127670_512.png",
            "size": "xl",
            "margin": "sm",
            "offsetTop": "xs"
          },
          {
            "type": "text",
            "text": "{{Message}}",
            "margin": "xs",
            "adjustMode": "shrink-to-fit",
            "gravity": "center"
          }
        ],
        "borderWidth": "semi-bold",
        "borderColor": "#ca9660",
        "cornerRadius": "md"
      },
      {
        "type": "box",
        "layout": "vertical",
        "spacing": "sm",
        "contents": [
          {
            "type": "box",
            "layout": "baseline",
            "contents": [
              {
                "type": "text",
                "text": "気温",
                "size": "md",
                "align": "start"
              },
              {
                "type": "text",
                "text": "{{Temperature}}",
                "weight": "bold",
                "margin": "sm",
                "flex": 0,
                "align": "end",
                "size": "lg",
                "offsetEnd": "xl"
              },
              {
                "type": "text",
                "text": "℃",
                "weight": "bold",
                "margin": "sm",
                "flex": 0,
                "align": "end",
                "size": "lg",
                "decoration": "none",
                "offsetEnd": "md"
              }
            ]
          },
          {
            "type": "box",
            "layout": "baseline",
            "contents": [
              {
                "type": "text",
                "text": "湿度",
                "size": "md",
                "align": "start"
              },
              {
                "type": "text",
                "text": "{{Humidity}}",
                "weight": "bold",
                "margin": "sm",
                "flex": 0,
                "align": "end",
                "size": "lg",
                "offsetEnd": "xxl"
              },
              {
                "type": "text",
                "text": "%",
                "weight": "bold",
                "margin": "sm",
                "flex": 0,
                "align": "end",
                "size": "lg",
                "decoration": "none",
                "offsetEnd": "md"
              }
            ]
          },
          {
            "type": "box",
            "layout": "baseline",
            "contents": [
              {
                "type": "text",
                "text": "気圧",
                "size": "md",
                "align": "start"
              },
              {
                "type": "text",
                "text": "{{Pressure}}",
                "weight": "bold",
                "margin": "sm",
                "flex": 0,
                "align": "end",
                "size": "lg",
                "offsetEnd": "sm"
              },
              {
                "type": "text",
                "text": "hPa",
                "weight": "bold",
                "margin": "sm",
                "flex": 0,
                "align": "end",
                "size": "lg",
                "decoration": "none"
              }
            ]
          }
        ]
      }
    ],
    "borderWidth": "bold",
    "borderColor": "#FFFFFF"
  },
  "footer": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "text",
        "text": "【測定誤差】 温度: ±1℃  湿度: ±3%  気圧: ±1hPa",
        "color": "#AAAAAA",
        "size": "xxs",
        "margin": "none",
        "align": "start",
        "offsetTop": "none",
        "offsetStart": "md",
        "adjustMode": "shrink-to-fit"
      }
    ]
  }
}